<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->

            <a href="/Anasayfa/Index" class="brand-link">
                <img src="~/img/marka.jpg" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light"><b>WELCOME</b></span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                @if (User.IsInRole("Öğretmen"))
                {
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <div class="image">
                            <img src="~/img/Profil1.jpg" class="img-circle elevation-2" alt="User Image" />
                        </div>
                        <div class="info">
                            <a href="/Anasayfa/Index" class="d-block">
                                <b>Welcome Teacher</b>
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <div class="image">
                            <img src="~/img/Profil2.png" class="img-circle elevation-2" alt="User Image" />
                        </div>
                        <div class="info">
                            <a href="/Anasayfa/Index" class="d-block">
                                <b>Welcome Student</b>
                            </a>
                        </div>
                    </div>
                }

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
            with font-awesome or any other icon font library -->
                        <li class="nav-item has-treeview">
                            <a href="/Anasayfa/Index" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    <b>Home Page</b>
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-icon">
                            <a href="/Galeri/Index" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    <b>Gallery</b>
                                </p>
                            </a>
                        </li>
                        @if (User.IsInRole("Öğretmen"))
                        {
            <li class="nav-item has-feedback">
                <a href="/Uygulama/Index" class="nav-link">
                    <i class="nav-icon fas fa-adjust"></i>
                    <p>
                        <b>Application</b>
                    </p>
                </a>
            </li>
 }
                        else
                        {
                            <li class="nav-item has-feedback">
                                <a href="/Uygulama/Index2" class="nav-link">
                                    <i class="nav-icon fas fa-adjust"></i>
                                    <p>
                                        <b>Application</b>
                                    </p>
                                </a>
                            </li>

                        }
                        <li class="nav-item has-treeview">
                            <a href="/İletisim/Index" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>
                                    <b>Communication Page</b>
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Giris/Index" class="nav-link">
                                <i class="nav-icon fas fa-tree"></i>
                                <p>
                                    <b>Login Page</b>
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Hata/Page404" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    <b>Error Page</b>
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Giris/Index" class="nav-link">
                                <i class="nav-icon fas fa-allergies"></i>
                                <p>
                                    <b>Log Out</b>
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            <div class="content">
                @RenderBody()
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/web/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/web/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/web/dist/js/adminlte.js"></script>

    <!-- OPTIONAL SCRIPTS -->
    <script src="~/web/plugins/chart.js/Chart.min.js"></script>
    <script src="~/web/dist/js/demo.js"></script>
    <script src="~/web/dist/js/pages/dashboard3.js"></script>
