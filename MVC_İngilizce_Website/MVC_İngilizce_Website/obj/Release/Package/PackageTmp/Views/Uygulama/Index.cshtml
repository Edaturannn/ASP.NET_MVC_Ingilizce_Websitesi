@using MVC_İngilizce_Website.Models.Entity
@model List<UygulamaTablosu>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    <br />
    <br />
    <h1>
        Welcome To The Teacher Page
    </h1>
    <br />
    <table class="table table-hover">
        <tr>
            <th>Verbs</th>
            <th>Sentences</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Fiil</td>
                <td>@item.Cumleler</td>
                <td><a href="/Uygulama/UygulamaGetir/@item.ID" class="btn btn-warning">Update</a></td>
                <td><a href="/Uygulama/Sil/@item.ID" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="/Uygulama/Ekle" class="btn btn-info">Add</a>
    <br />
    <br />
</div>

