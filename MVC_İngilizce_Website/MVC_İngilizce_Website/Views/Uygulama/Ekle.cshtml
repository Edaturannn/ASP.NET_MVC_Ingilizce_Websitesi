@model MVC_İngilizce_Website.Models.Entity.UygulamaTablosu
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    <br />
    <br />
    <h1>
        Welcome To The Add Page
    </h1>
    <br />
    @using (Html.BeginForm("Ekle", "Uygulama", FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label("Verbs")
            @Html.TextBoxFor(m => m.Fiil, new { @class = "form-control" })
            <br />
            @Html.Label("Meaning")
            @Html.TextBoxFor(m => m.Cumleler, new { @class = "form-control" })
            <br />
            <br />
            <button class="btn btn-info">Add</button>
        </div>
    }
</div>



