
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>
        Welcome To The Home Page
    </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">


    <link href="~/login-form-19/css/style.css" rel="stylesheet" />

</head>
<body style="background-color:gray">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section" style="color:white">
                        Welcome My Website Developed With ASP.NET MVC
                    </h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5" style="background-color:black">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url('../../img/userfoto.jpg');"></div>
                        <h3 class="text-center mb-0">Welcome</h3>
                        @using(Html.BeginForm("Index","Giris",FormMethod.Post))
                        { 
                        <form action="#" class="login-form">
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" class="form-control" placeholder="Username" name="Email" required>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" class="form-control" placeholder="Password" name="Sifre" required>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Login</button>
                            </div>
                        </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/login-form-19/js/jquery.min.js"></script>
    <script src="~/login-form-19/js/popper.js"></script>
    <script src="~/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/login-form-19/js/main.js"></script>

</body>
</html>


